@model Domain.Entities.Country

@{
   ViewData["Title"] = "Details";
   Layout = "~/Views/Shared/_AdminLayout.cshtml";
   var module = Context.Request.Query["module"];
}

<div class="row ps-4 pe-4 offset-lg-1">
   <div class="col-md-10 col-lg-10 p-0 ps-sm-4">

      <!--TITLE-->
      <div class="pagetitle">
         <h1 class="card-title fs-2 mb-0">Country</h1>
         <hr class="customhr mt-0">
      </div>

      <div class="row">
         <div class="col-md-12">

            <!--CARD START-->
            <div class="card table-responsive mt-3 p-3">
               <div class="card-body">

                  <h4 class="card-title fs-4">Country Details</h4>
                  <hr class="mt-0" />

                  <!--COUNTRY NAME-->
                  <div class="row mt-3">
                     <div class="col-lg-3 col-md-5 label fw-bolder"> Country name </div>
                     <div class="col-lg-4 col-md-8"> : @Model.Description</div>
                  </div>

                  <!--COUNTRY CODE-->
                  <div class="row mt-3">
                     <div class="col-lg-3 col-md-5 label fw-bolder"> Country code </div>
                     <div class="col-lg-4 col-md-8"> : @Model.CountryCode</div>
                  </div>

                  <!--ISO CODE-->
                  <div class="row mt-3">
                     <div class="col-lg-3 col-md-5 label fw-bolder"> ISO Code Alpha2 </div>
                     <div class="col-lg-3 col-md-8"> : @Model.ISOCodeAlpha2</div>
                  </div>              
               </div>
            </div>
            <!--CARD END-->

            <!--ACTION-->
            <div class="text-center">
               <a asp-controller="Countries" asp-action="Index" class="btn btn-lg btn-secondary justify-content-center">Finish</a>
            </div>
         </div>
      </div>
   </div>
</div>