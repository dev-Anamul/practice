@model X.PagedList.IPagedList<Domain.Entities.NTGLevelTwoDiagnosis>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{  
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var sl = Convert.ToInt32(ViewBag.SlNo);
    var search = ViewData["Search"] as string;
    var noMatchFound = !string.IsNullOrEmpty(search) && Model.Count == 0;
   var (module, parent) = (Context.Request.Query["module"].ToString(), Context.Request.Query["parent"].ToString());
}

<div class="row ps-2 pe-2 ps-sm-4 pe-sm-4 offset-1 CardOffset">
   <div class="col-md-10 col-lg-10 p-0 ps-sm-4 ClCard">

      <!--SEARCH-->
      <div class="pagetitle row">
         <div class="float-start col-md-6">
            <h1 class="card-title fs-3">NTG Level Two Diagnosis</h1>
         </div>

         @* <div class="float-end col-md-6 pt-1">
            @using (Html.BeginForm())
            {
               <div class="input-group">
                  @Html.TextBox("search", null, new { @class = "form-control", placeholder = "Search by NTG Level Two Diagnosis" })
                  <input type="hidden" name="module" value="@module" />
                  <input type="hidden" name="parent" value="@parent" />

                  <div class="input-group-append">
                     <button type="submit" class="btn btn-primary rounded-1 search-p">
                        <i class="bi bi-search"></i>
                     </button>

                    <button class="btn btn-secondary btn-sm p-13" id="showAllButton">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </button>
                  </div>
               </div>
            }
         </div> *@

         <div class="float-end col-md-6 pt-1">
            @using (Html.BeginForm("Index", "NTGLevelTwoDiagnosis", FormMethod.Get, new { id = "filterForm" }))
            {
               <div class="input-group">
                  @Html.TextBox("search", null, new { @class = "form-control", id = "nameInput", placeholder = "Search by NTG Level Two Diagnosis" })
                  @Html.Hidden("page", Model.PageNumber)
                  <input type="hidden" name="module" value="@module" />
                  <input type="hidden" name="parent" value="@parent" />

                  <div class="input-group-append">
                     <button type="submit" class="btn btn-primary rounded-1 search-p">
                        <i class="bi bi-search"></i>
                     </button>

                     <button class="btn btn-secondary btn-sm p-13" id="showAllButton">
                        <i class="bi bi-arrow-counterclockwise"></i>
                     </button>
                  </div>
               </div>
            }
         </div>

         <hr class="customhr mt-0 ms-0 ms-sm-2 mt-2 mt-sm-0">

         <!--ADD-->
         <div class="row d-flex justify-content-between mt-2 mb-2">
            <div class="w-15">
               <a class="btn btn-primary float-start" href="/NTGLevelTwoDiagnosis/Create?module=@module&parent=@parent&oid=@ViewBag.Oid"><i class="bi bi-plus-circle"></i> Add new</a>
               <a href="/NTGLevelOneDiagnosis/Index?module=@module&parent=@parent&oid=@ViewBag.Oid" class="btn btn-outline-secondary float-end"><i class="bi bi-arrow-left-circle"></i> Back</a>
            </div>
         </div>
      </div>

        <!--ALERT MESSAGE-->
        @if (TempData[Utilities.Constants.SessionConstants.Message] != null)
        {
            <div class="alert alert-success alert-dismissible show fade  mt-1" role="alert">
                <i class=""></i>&nbsp;@TempData[Utilities.Constants.SessionConstants.Message]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row mt-3">
            <div class="col-md-12">

                <!--CARD START-->
                <div class="card">
                     <div class="card-body font-md mt-3">

                        <div class="col-md-12 mb-2" style="font-size:12px;">
                              <span>NTG Level One Diagnosis :</span>
                              <span class=" fw-bold">@ViewBag.NTGLevelTwo</span>
                        </div>

                        <div class="table-responsive">
                           <!-- TABLE -->
                           <table class="table">
                               <thead>
                                   <tr>
                                       <th scope="col">SL</th>
                                       @*<th scope="col">NTG Level One</th>*@
                                       <th scope="col">NTG Level Two Diagnosis</th>
                                       <th scope="col"></th>
                                       <th scope="col"></th>
                                   </tr>
                               </thead>

                               <tbody>
                                    @if (noMatchFound)
                                   {
                                     <tr style="color:red; text-align: center;">
                                       <th colspan="5"><span class="fw-bold fs-5">No match Found!</span></th>
                                     </tr>
                                   }
                                   else
                                   {
                                       @foreach (var item in Model)
                                       {
                                          <tr>
                                             <th scope="row">@sl</th>
                                             @*<td>@item.NTGLevelOneDiagnosis.Diagnosis</td>*@
                                               <td>@item.Description</td>

                                             <td>
                                                @* <a class="btn btn-outline-secondary btn-sm" asp-controller="NTGLevelTwoDiagnosis" asp-action="Edit" asp-route-id="@item.Oid"><i class="bi bi-pencil-square"></i> Edit</a> *@
                                                <a class="btn btn-outline-secondary btn-sm" href="/NTGLevelTwoDiagnosis/Edit/@item.Oid?module=@module&parent=@parent"><i class="bi bi-pencil-square"></i> Edit</a>
                                                <a class="btn btn-secondary btn-sm mx-0 mx-sm-3" href="/NTGLevelThreeDiagnosis/Index?module=@module&parent=@parent&oid=@item.Oid">Level Three Diagnosis</a>
                                             </td>
                                          </tr>
                                          sl++;
                                       }
                                   }                                
                               </tbody>
                           </table>
                        </div>

                     <!--PAGINATION-->
                     @Html.Partial("~/Views/Shared/_Pagination.cshtml")

                    </div>
                </div>
                <!--CARD END-->
            </div>
        </div>
    </div>
</div>