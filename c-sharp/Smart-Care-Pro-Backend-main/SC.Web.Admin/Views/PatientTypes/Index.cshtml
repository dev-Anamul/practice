@model X.PagedList.IPagedList<Domain.Entities.DFZPatientType>
@using Utilities.Constants
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var sl = Convert.ToInt32(ViewBag.SlNo);
    var search = ViewData["Search"] as string;
    var noMatchFound = !string.IsNullOrEmpty(search) && Model.Count == 0;
    var module = Context.Request.Query["module"];
}

<div class="row ps-2 pe-2 ps-sm-4 pe-sm-4 offset-1 CardOffset">
    <div class="col-md-10 col-lg-10 p-0 ps-sm-4 ClCard">

        <!--SEARCH-->
        <div class="pagetitle row">
            <div class="float-start col-md-6">
                <h1 class="card-title fs-2 ">DFZ Patient Type</h1>
            </div>

            <div class="float-end col-md-6 pt-1">
                @using (Html.BeginForm("Index", "PatientTypes", FormMethod.Get, new { id = "filterForm" }))
                {
                    <div class="input-group mb-2">
                        @Html.TextBox("search", null, new { @class = "form-control", id = "nameInput", placeholder = "Search by Patient Type" })
                        @Html.Hidden("page", Model.PageNumber)
                        @Html.Hidden("module", "Clients")

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary rounded-1 search-p">
                                <i class="bi bi-search"></i>
                            </button>

                            <button class="btn btn-secondary btn-sm p-13" id="showAllButton">
                                <i class="bi bi-arrow-counterclockwise"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>

            <hr class="customhr mt-0 ms-0 ms-sm-2 mt-2 mt-sm-0">

            <!--ADD-->
            <div class="row d-flex justify-content-between mt-2 mb-2">
                <div class="w-15">
                    <a class="btn btn-primary float-start" href="/PatientTypes/Create?module=@module&oid=@ViewBag.Oid"><i class="bi bi-plus-circle"></i> Add new</a>
                    <a href="/ArmedForceServices/Index?module=@module&oid=@ViewBag.Oid" class="btn btn-outline-secondary float-end"><i class="bi bi-arrow-left-circle"></i> Back</a>
                </div>
            </div>

        </div>

        <!--ALERT MESSAGE-->
        @if (TempData[Utilities.Constants.SessionConstants.Message] != null)
        {
            <div class="alert alert-success alert-dismissible show fade  mt-1" role="alert">
                <i class=""></i>&nbsp;@TempData[Utilities.Constants.SessionConstants.Message]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row mt-3">
            <div class="col-md-12">

                <!--CARD START-->
                <div class="card">
                    <div class="card-body font-md mt-3">
                        <div class="col-md-12 mb-2" style="font-size:12px;">
                            <span>Armed Force Service :</span>
                            <span class=" fw-bold">@ViewBag.ArmedForceServiceName</span>
                        </div>

                        <div class="table-responsive">
                            <!-- TABLE -->
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>SL</th>
                                        <th>Patient Type</th>
                                        <th>Principal/DFZ </th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (noMatchFound)
                                    {
                                        <tr style="color:red; text-align: center;">
                                            <th colspan="5"><span class="fw-bold fs-5">No match Found!</span></th>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var patientType in Model)
                                        {
                                            <tr>
                                                <th>@sl</th>
                                                <td>@patientType.Description</td>
                                                <td>
                                                    @if (patientType.IsDependent == Enums.YesNo.Yes)
                                                    {
                                                        <span>Yes</span>
                                                    }
                                                    else if (patientType.IsDependent == Enums.YesNo.No)
                                                    {
                                                        <span>NO</span>
                                                    }
                                                    else
                                                    {
                                                        <span></span>
                                                    }
                                                </td>
                                                <td>
                                                    @* <a class="btn btn-outline-secondary" asp-controller="PatientTypes" asp-action="Edit" asp-route-id="@patientType.Oid"><i class="bi bi-pencil-square"></i> Edit</a> *@
                                                    <a class="btn btn-outline-secondary" href="/PatientTypes/Edit/@patientType.Oid?module=@module"><i class="bi bi-pencil-square"></i> Edit</a>
                                                    <a class="btn btn-secondary mx-0 mx-sm-3" href="/DFZRanks/Index?module=@module&oid=@patientType.Oid">DFZ Rank</a>
                                                </td>
                                            </tr>
                                            sl++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!--PAGINATION-->
                        @Html.Partial("~/Views/Shared/_Pagination.cshtml")

                    </div>
                </div>
                <!--CARD END-->
            </div>
        </div>
    </div>
</div>