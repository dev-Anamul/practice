@model Domain.Entities.Province

@{
   ViewData["Title"] = "Delete";
   Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row ps-4 pe-4 offset-1 CardOffset">
   <div class="col-md-10 col-lg-10 p-4 ClCard">

      <div class="row mt-3">
         <div class="col-md-12">

            <!--CARD START-->
            <div class="card">
                  <div class="card-body font-md mt-3">

                     <h1>Delete Province</h1>

                     <h3>Are you sure you want to delete this province?</h3>

                     @if (ViewData["ErrorMessage"] != null)
                     {
                        <div class="alert alert-danger">
                           @ViewData["ErrorMessage"]
                        </div>
                     }

                     <div>
                        <h4>Province Details</h4>
                        <hr />
                        <dl class="row">
                           <dt class="col-sm-2">
                              Province Name:
                           </dt>
                           <dd class="col-sm-10">
                              @Html.DisplayFor(model => model.Description)
                           </dd>
                        </dl>

                        <form asp-action="Delete" asp-route-id="@Model.Oid">
                           <input type="submit" value="Delete" class="btn btn-danger mx-2" />
                           <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </form>
                     </div>

                  </div>
            </div>
         </div>
      </div>
   </div>
</div>