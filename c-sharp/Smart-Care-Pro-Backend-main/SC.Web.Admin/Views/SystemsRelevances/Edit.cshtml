@model Domain.Entities.SystemRelevance

@{
   
   Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row ps-2 pe-2 ps-sm-4 pe-sm-4 offset-1 CardOffset">
   <div class="col-md-10 col-lg-10 p-0 ps-sm-4 ClCard">

      <div class="card">
         <div class="card-body ps-4 pe-4 ps-sm-5 pe-sm-5">

            <!--HEADER-->
            <div class="pagetitle">
               <h4 class="card-title fs-2 fw-bold mb-0">Systems Relevance</h4>
               <p class="mb-1" style="font-size:14px">Fields marked by <span class="text-danger">*</span> are mandatory</p>
               <hr class="mt-0">
            </div>

            <!--FORM START-->
            <form class="row g-1" method="post" asp-action="Edit" asp-controller="SystemsRelevances">
               <input type="text" asp-for="Oid" hidden />

               <!--SYSTEM-->
               <div class="col-md-12">
                  <div class="form-floating mt-2">
                     <select asp-for="PhysicalSystemId" name="PhysicalSystemId" class="form-select" aria-label="State" asp-items="@ViewBag.PhysicalSystem">
                        <option value="">Select</option>
                     </select>
                     <label class="required" asp-for="PhysicalSystemId">Physical System</label>
                     <span asp-validation-for="PhysicalSystemId" class="text-danger"></span>
                  </div>
               </div>

               <!--DRUG DEFINITION-->
               <div class="col-md-12">
                  <div class="col-md-6 mt-2">
                     <label class="required">Drug Definition</label>
                  </div>

                  <div class="form-floating mt-1">
                     <select asp-for="DrugDefinitionId" name="DrugDefinitionId" class="form-select select2" data-show-subtext="true" data-live-search="true" data-val="true" asp-items="@ViewBag.DrugDefinition" aria-label="State">
                        <option value="" class="pt-2">Select</option>
                     </select>
                  </div>
                  <span asp-validation-for="DrugDefinitionId" class="text-danger"></span>
               </div>

               <!--ACTIONS-->
               <div class="col-12 mt-0 mt-3 text-center">
                  <button class="btn btn-primary btn-lg mx-2" type="submit">
                     <i class="bi bi-check2-circle"></i> Submit
                  </button>
                  <a href="/SystemsRelevances/Index?module=Pharmacy" class="btn btn-secondary btn-lg"><i class="bi bi-x-circle"></i> Close</a>
               </div>
            </form>

         </div>
      </div>
   </div>
</div>