@model Domain.Entities.WHOStagesCondition

@{
   
   Layout = "~/Views/Shared/_AdminLayout.cshtml";
   var (module, parent) = (Context.Request.Query["module"].ToString(), Context.Request.Query["parent"].ToString());
}

<div class="row ps-2 pe-2 ps-sm-4 pe-sm-4 offset-1 CardOffset">
   <div class="col-md-10 col-lg-10 p-0 ps-sm-4 ClCard">

      <!--ALERT MESSAGE-->
      @if (TempData[Utilities.Constants.SessionConstants.Message] != null)
      {
         <div class="alert alert-success alert-dismissible show fade  mt-1" role="alert">
            <i class=""></i>&nbsp;@TempData[Utilities.Constants.SessionConstants.Message]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
         </div>
      }

      <div class="card">
         <div class="card-body ps-4 pe-4 ps-sm-5 pe-sm-5">

            <!--HEADER-->
            <div class="pagetitle">
               <h4 class="card-title fs-2 fw-bold mb-0">WHO Stages Condition</h4>
               <p class="mb-1" style="font-size:14px">Fields marked by <span class="text-danger">*</span> are mandatory</p>
               <hr class="mt-0">
            </div>

            <!--FORM START-->
            <form class="row g-1" method="post" asp-action="Edit" asp-controller="WHOStagesConditions">
                <input type="text" asp-for="Oid" hidden/>
               <input type="hidden" name="module" value="@module" />
               <input type="hidden" name="parent" value="@parent" />

               <!--STAGE-->
               <div class="col-md-12">
                  <div class="form-floating mt-2">
                     <select asp-for="WHOClinicalStageId" class="form-select" aria-label="State" asp-items="@ViewBag.WHOClinicalStage">
                        <option value="">Select</option>
                     </select>
                     <label class="required" asp-for="WHOClinicalStageId">WHO Clinical Stage</label>
                     <span asp-validation-for="WHOClinicalStageId" class="text-danger"></span>
                  </div>
               </div>

               <!--CONDITION-->
               <div class="col-md-12">
                  <div class="form-floating mt-2">
                     <input asp-for="Description" type="text" class="form-control" data-val="true" data-val-required="Required." data-val-length-max="90">
                            <label class="required" asp-for="Description">Conditions</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                  </div>
               </div>

               <!--FOR ADOLOCENT-->
               <div class="col-md-12">
                  <div class="form-floating mt-2">
                     <select asp-for="ForAdolescent" class="form-select">
                        <option value="">Select</option>
                        <option value="False">No</option>
                        <option value="True">Yes</option>
                     </select>
                            <label asp-for="ForAdolescent" class="">For Adolescent</label>
                  </div>
               </div>

               <!--FOR ADULT-->
               <div class="col-md-12">
                  <div class="form-floating mt-2">
                     <select asp-for="ForAdult" class="form-select">
                        <option value="">Select</option>
                        <option value="False">No</option>
                        <option value="True">Yes</option>
                     </select>
                     <label asp-for="ForAdult" class="">For Adult</label>
                  </div>
               </div>

               <!--FOR PREGNANT-->
               <div class="col-md-12">
                  <div class="form-floating mt-2">
                     <select asp-for="ForPregnant" class="form-select">
                        <option value="">Select</option>
                        <option value="False">No</option>
                        <option value="True">Yes</option>
                     </select>
                     <label asp-for="ForPregnant" class="">For Pregnant</label>
                  </div>
               </div>

               <!--ACTIONS-->
               <div class="col-12 mt-0 mt-3 text-center">
                  <button class="btn btn-primary btn-lg mx-2" type="submit">
                     <i class="bi bi-check2-circle"></i> Submit
                  </button>
                  <a href="/WHOStagesConditions/Index?module=@module&parent=@parent" class="btn btn-secondary btn-lg"><i class="bi bi-x-circle"></i> Close</a>
               </div>
            </form>

         </div>
      </div>
   </div>
</div>